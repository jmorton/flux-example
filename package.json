{
  "name": "flux-example",
  "version": "0.0.1",
  "description": "Simple flux how-to",
  "main":    "js/app.js",
  "author":  "Jonathan Morton",
  "license": "MIT",
  "dependencies": {
    "flux":          "^2.0.1",
    "object-assign": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify":     "^3.0.0",
    "watchify":   "^2.1.1",
    "uglify-js":  "^2.4.20"
  },
  "scripts": {
    "start": "watchify -o bundle.js -v -d js/app.js",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > bundle.min.js"
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  }
}